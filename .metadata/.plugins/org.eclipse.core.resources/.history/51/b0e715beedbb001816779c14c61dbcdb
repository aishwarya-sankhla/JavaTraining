package com.training;

public class Employee {
	private int age;

	public Employee() {
		super();
		// TODO Auto-generated constructor stub
	}

	public Employee(int age) throws Exception{
		super();
		if(age<18 || age>50 )
			throw new RangeCheck("Not within range");
		else
			
			this.age = age;
		
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		try{
			if(age<18 || age>50 )
				throw new RangeCheck("Not within range");
		}
		catch(RangeCheck e){
			System.out.println(e.getMessage());
		}
		else
			this.age = age;
		
	}
	
}
